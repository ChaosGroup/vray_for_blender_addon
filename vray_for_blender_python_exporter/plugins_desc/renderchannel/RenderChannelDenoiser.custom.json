{
    "ID": "RenderChannelDenoiser",
    "Name" : "Denoiser",
    "Subtype" : "SPECIAL",
    "Parameters": [
        {
            "attr": "enabled",
            "default": true
        },
        {
            "attr": "use_gpu",
            "default": true
        },
        {
            "attr" : "name",
            "default" : "Denoiser",
            "update": "plugins.channel.RenderChannelDenoiser.onUpdateChannelName"
        },
        {
            "attr": "engine",
            "update": "onUpdateEngine"
        }
    ],
    "Widget": {
        "widgets": [
            {
                "attrs": [
                    {
                        "name": "channelType",
                        "custom_draw": "widgetDrawChannelType"
                    },
                    {
                        "name": "name",
                        "label": "Channel Name"
                    },
                    {
                        "name": "enabled"
                    },
                    {
                        "name": "engine"
                    },
                    {
                        "name": "preset"
                    },
                    {
                        "name": "strength"
                    },
                    {
                        "name": "radius"
                    }
                ],
                "layout": "COLUMN"
            },
            {
                "layout": "ROLLOUT",
                "name": "advanced",
                "label": "Advanced",
                "attrs": [
                    {
                        "name": "use_gpu"
                    },
                    {
                        "name": "temporal_mode",
                        "label": "Use NVIDIA Temporal Mode",
                        "active": {
                            "cond": "::enabled=1,::engine=1,::optix_use_upscale=0"
                        }
                    },
                    {
                        "name": "optix_use_upscale"
                    },
                    {
                        "name": "mode"
                    },
                    {
                        "name": "denoise_alpha"
                    }
                ]
            }
        ]
    },
    "Options": {
        "animatable": false,
        "excluded_parameters": [
            "enableDeepOutput",
            "type",
            "progressive_update",
            "generate_render_elements",
            "silence_optix_init_error"
        ]
    }
}