                    }
                ]
            },
            {
                "layout": "COLUMN",
                "attrs": [
                    {
                        "name": "gizmo_selector",
                        "label": "Objects",
                        "list_label": "Object List",
                        "draw_container": "ROLLOUT"
                    }
                ]
            },
            {
                "layout": "ROLLOUT",
                "name": "light_select",
                "label": "Light Set",
                "default_closed": true,
                "attrs": [
                    {
                        "name": "light_mode"
                    },
                    {
                        "name": "light_selector",
                        "label": "Light Set",
                        "list_label": "Light List"
                    }
                ]
            }
        ]
    },
    "Node": {
        "input_sockets": [
