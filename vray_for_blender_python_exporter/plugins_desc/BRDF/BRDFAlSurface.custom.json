{
    "ID": "BRDFAlSurface",
    "Name": "V-Ray AL Surface Mtl",
    "Parameters": [
        {
            "attr": "bump_map",
            "options": {
                "linked_only": true
            }
        },
        {
            "attr": "diffuse_bump_map",
            "options": {
                "linked_only": true
            }
        },
        {
            "attr": "reflect1_bump_map",
            "options": {
                "linked_only": true
            }
        },
        {
            "attr": "reflect2_bump_map",
            "options": {
                "linked_only": true
            }
        },
        {
            "attr": "bump_amount",
            "ui": {
                "quantityType": "distance"
            }
        },
        {
            "attr": "diffuse_bump_amount",
            "ui": {
                "quantityType": "distance"
            }
        },
        {
            "attr": "reflect1_bump_amount",
            "ui": {
                "quantityType": "distance"
            }
        },
        {
            "attr": "reflect2_bump_amount",
            "ui": {
                "quantityType": "distance"
            }
        },
        {
            "attr": "sss1_radius",
            "ui": {
                "quantityType": "distance"
            }
        },
        {
            "attr": "sss2_radius",
            "ui": {
                "quantityType": "distance"
            }
        },
        {
            "attr": "sss3_radius",
            "ui": {
                "quantityType": "distance"
            }
        },
        {
            "attr": "opacity",
            "desc": "The opacity value, where 1 is opaque and 0 is transparent."
        },
        {
            "attr": "diffuse",
            "desc": "The color of the material. It also depends on the reflection and refraction colors."
        },
        {
            "attr": "diffuse_strength",
            "desc": "Multiplier for the diffuse color."
        },
        {
            "attr": "diffuse_bump_amount",
            "desc": "Multiplier for the diffuse bump map effect."
        },
        {
            "attr": "reflect1",
            "desc": "The first specular color. The reflection color dims the diffuse surface color."
        },
        {
            "attr": "reflect1_roughness",
            "desc": "The roughness of the first specular component. Used to simulate rough surfaces or surfaces covered with dust."
        },
        {
            "attr": "reflect1_distribution",
            "desc": "The BRDF distribution type for the first specular component (0 - Beckmann, 1 - GGX). The GGX distribution has a longer 'tail' compared to the Beckmann distribution."
        },
        {
            "attr": "reflect2_strength",
            "desc": "The strength of the second specular component. If this value is left at 0, the second reflection layer is not applied."
        },
        {
            "attr": "reflect2",
            "desc": "The second specular color. The reflection color dims the diffuse surface color."
        },
        {
            "attr": "reflect2_roughness",
            "desc": "The roughness of the first specular component. Used to simulate rough surfaces or surfaces covered with dust."
        },
        {
            "attr": "reflect2_distribution",
            "desc": "The BRDF distribution type for the first specular component (0 - Beckmann, 1 - GGX). The GGX distribution has a longer 'tail' compared to the Beckmann distribution."
        },
        {
            "attr": "sss_mode",
            "desc": "The diffusion method spreads light more uniformly. The directional method propagates more light in the direction of the light."
        },
        {
            "attr": "sss1_weight",
            "desc": "The relative contribution of the SSS layer to the material."
        },
        {
            "attr": "sss2_weight",
            "desc": "The relative contribution of the SSS layer to the material."
        },
        {
            "attr": "sss3_weight",
            "desc": "The relative contribution of the SSS layer to the material."
        }
    ],
    "Options": {
        "excluded_parameters": [
            "reflect_subdivs",
            "sss_subdivs"
        ],
        "animatable": true
    },
    "Widget": {
        "widgets": [
            {
                "layout": "ROLLOUT",
                "name": "bump",
                "label": "Bump",
                "attrs": [
                    {
                        "name": "bump_amount"
                    },
                    {
                        "name": "bump_type"
                    }
                ]
            },
            {
                "layout": "ROLLOUT",
                "name": "diffuse",
                "label": "Diffuse and Opacity",
                "attrs": [
                    {
                        "name": "opacity"
                    },
                    {
                        "name": "diffuse"
                    },
                    {
                        "name": "diffuse_strength"
                    },
                    {
                        "name": "diffuse_bump_amount"
                    },
                    {
                        "name": "diffuse_bump_type"
                    }
                ]
            },
            {
                "layout": "ROLLOUT",
                "name": "reflection",
                "label": "Reflection 1",
                "attrs": [
                    {
                        "name": "reflect1"
                    },
                    {
                        "name": "reflect1_strength"
                    },
                    {
                        "name": "reflect1_roughness"
                    },
                    {
                        "name": "reflect1_ior"
                    },
                    {
                        "layout": "ROW",
                        "attrs": [
                            {
                                "name": "reflect1_distribution",
                                "expand": true
                            }
                        ]
                    },
                    {
                        "name": "reflect1_bump_amount"
                    },
                    {
                        "name": "reflect1_bump_type"
                    }
                ]
            },
            {
                "layout": "ROLLOUT",
                "name": "reflection",
                "label": "Reflection 2",
                "attrs": [
                    {
                        "name": "reflect2_strength"
                    },
                    {
                        "layout": "COLUMN",
                        "active": {"cond": "::reflect2_strength!=0"},
                        "attrs": [
                            {
                                "name": "reflect2"
                            },
                            {
                                "name": "reflect2_roughness"
                            },
                            {
                                "name": "reflect2_ior"
                            },
                            {
                                "layout": "ROW",
                                "attrs": [
                                    {
                                        "name": "reflect2_distribution",
                                        "expand": true
                                    }
                                ]
                            },
                            {
                                "name": "reflect2_bump_amount"
                            },
                            {
                                "name": "reflect2_bump_type"
                            }
                        ]
                    }
                ]
            },
            {
                "layout": "ROLLOUT",
                "name": "sss",
                "label": "SSS",
                "attrs": [
                    {
                        "name": "sss_mix"
                    },
                    {
                        "layout": "ROW",
                        "name": "sss_mode",
                        "attrs": [
                            {
                                "name": "sss_mode",
                                "expand": true
                            }
                        ]
                    },
                    {
                        "layout": "SEPARATOR"
                    },
                    {
                        "name": "sss1_weight"
                    },
                    {
                        "name": "sss1_color"
                    },
                    {
                        "name": "sss1_radius"
                    },
                    {
                        "layout": "SEPARATOR"
                    },
                    {
                        "name": "sss2_weight"
                    },
                    {
                        "name": "sss2_color"
                    },
                    {
                        "name": "sss2_radius"
                    },
                    {
                        "layout": "SEPARATOR"
                    },
                    {
                        "name": "sss3_weight"
                    },
                    {
                        "name": "sss3_color"
                    },
                    {
                        "name": "sss3_radius"
                    }
                ]
            }
        ]
    }
}