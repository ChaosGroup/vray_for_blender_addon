{
    "ID": "BRDFVRayMtl",
    "Name": "V-Ray Mtl",
    "Parameters": [
        {
            "attr": "option_shading_model"
        },
        {
            "attr": "opacity",
            "options": {
                "visible": false
            }
        },
        {
            "attr": "opacity_color",
            "ui": {
                "display_name": "Opacity"
            }
        },
        {
            "attr": "opacity_source",
            "default": "1"
        },
        {
            "attr": "roughness_model",
            "default": "1"
        },
        {
            "attr": "fresnel",
            "default": true
