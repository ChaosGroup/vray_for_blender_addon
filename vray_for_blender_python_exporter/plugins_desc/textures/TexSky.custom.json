{
    "ID": "TexSky",
    "Name": "V-Ray Sky",
    "Parameters": [
        {
            "attr": "auto_sun",
            "default": true,
            "desc": "Attach Sun automatically and take settings from it",
            "name": "Find Sun Automatically",
            "type": "BOOL",
            "options": {
                "derived": true
            }
        },
        {
            "attr" : "sky_model",
            "default" : "5",
            "desc" : "Selects the procedural model used to simulate the TexSky texture (Preetham, CIE Clear, Overcast, Hosek and PRG Clear Sky)",
            "items" : 
            [
                [ "0", "Preetham et al", "Preetham et al" ],
                [ "1", "CIE Clear", "CIE Clear" ],
                [ "2", "CIE Overcast", "CIE Overcast" ],
                [ "3", "Hosek et al", "Hosek et al" ],
                [ "5", "PRG Clear Sky", "PRG Clear Sky" ]
            ]
        },
        {
            "attr" : "sun",
            "type": "OBJECT",
            "options": {
                "link_info": {
                    "link_type": "OBJECTS",
                    "filter_function": "sunFilter"
                }
            }
        },
        {
            "attr": "sun_select",
            "type": "TEMPLATE",
            "desc": "Specifies which sun will be affected by the effect",
            "options": {
                "template": {
                    "type": "templateSingleObjectSelect",
                    "args": {
                        "collection": "objects",
                        "bound_property": "sun",
                        "filter_function": "filters.filterSuns"
                    }
                }
            }
        },
        {
            "attr" : "sun_dir_only",
            "type" : "BOOL",
            "ui" : { "display_name": "Sun Direction Only" }
        },
        {
            "attr": "horiz_illum",
            "ui":
            {
                "min": 0,
                "spin_step": 1000
            }
        },
        {
            "attr": "blend_angle",
            "subtype": "ANGLE",
            "precision": 3,
            "ui": {
                "spin_step": 1,
                "min": 0,
                "max": 90
            }
        }
    ],
    "Widget": {
        "widgets": [
            {
                "layout": "ROLLOUT",
                "name": "basic",
                "label": "Basic",
                "default_closed": false,
                "attrs": [
                    {
                        "name": "intensity_multiplier"
                    },
                    {
                        "name": "turbidity"
                    },
                    {
                        "name": "ozone",
                        "active": {
                            "cond": "::sky_model!=5"
                        }
                    },
                    {
                        "name": "altitude",
                        "active": {
                            "cond": "::sky_model=5"
                        }
                    },
                    {
                        "name": "size_multiplier"
                    },
                    {
                        "name": "sky_model"
                    },
                    {
                        "name": "horiz_illum",
                        "active": {
                            "cond": "::sky_model=1;::sky_model=2"
                        }
                    },
                    {
                        "name": "color_mode"
                    },
                    {
                        "name": "filter_color"
                    },
                    {
                        "name": "ground_albedo"
                    },
                    {
                        "name": "blend_angle"
                    },
                    {
                        "name": "horizon_offset"
                    },
                    {
                        "name": "water_vapour"
                    }
                ],
                "active": {
                    "cond": "plugins.texture.TexSky.showBasicOptions"
                }
            },
            {
                "layout": "ROLLOUT",
                "name": "options",
                "label": "Options",
                "attrs": [
                    {
                        "name": "sun_select",
                        "label": "Sun"
                    },
                    {
                        "name": "sun_dir_only"
                    }
                ]
            }
        ]
    },
    "Node": {
        "input_sockets" : [
            {
                "name": "filter_color"
            },
            {
                "name": "ground_albedo"
            },
            {
                "name": "sun"
            }
        ],
        "internal_links": {
            "*": ["Filter Color", "Ground Albedo"]
        }
    },
    "Options": {
        "excluded_parameters": [
            "target_transform"
        ],
        "animatable": true
    }
}