{
    "ID": "TexGradRamp",
    "Name": "V-Ray Gradient Ramp",
    "Parameters": [
        {
            "attr" : "gradient_type",
            "default" : "0",
            "desc" : "The type of gradient to use",
            "items" :
            [
                [ "0", "Four corner", "Four corner" ],
                [ "1", "Box", "Box" ],
                [ "2", "Diagonal", "Diagonal" ],
                [ "3", "Lighting", "Lighting" ],
                [ "4", "Linear", "Linear" ],
                [ "5", "Mapped", "Mapped" ],
                [ "6", "Normal", "Normal" ],
                [ "7", "Pong", "Pong" ],
                [ "8", "Radial", "Radial" ],
                [ "9", "Spiral", "Spiral" ],
                [ "10", "Sweep", "Sweep" ],
                [ "11", "Tartan", "Tartan" ],
                [ "12", "Position", "Position" ]
            ],
            "update": "onUpdateGradientType"
        },
        {
            "attr": "texture_map",
            "options": {
                "linked_only": true
            }
        },
        {
            "attr": "uvwgen",
            "ui" : {
                "display_name": "Mapping"
            },
            "type": "UVWGEN"
        },
        {
            "attr": "color_ramp",
            "type": "INT",
            "desc": "Gradient color ramp",
            "default": 0,
            "options": {
               "derived": true
            }
        },
        {
            "attr": "gradient_position",
            "ui": {
                "min": 0.0,
                "max": 1.0
            }
        }
    ],
    "Widget": {
        "widgets": [
            {
                "layout": "COLUMN",
                "attrs": [
                    {
                        "name": "gradient_type"
                    },
                    {
                        "name": "color_ramp",
                        "custom_draw": "widgetDrawRamp"
                    }
                ]
            },
            {
                "layout": "SEPARATOR"
            },
            {
                "layout": "ROLLOUT",
                "name": "common",
                "label": "Common",
                "default_closed": false,
                "attrs": [
                    {
                        "name": "gradient_position",
                        "visible": {"cond": "::gradient_type=12"}
                    },
                    {
                        "layout": "SEPARATOR"
                    },
                    {
                        "name": "alpha_from_intensity"
                    },
                    {
                        "name": "invert",
                        "label": "Invert Color"
                    },
                    {
                        "name": "invert_alpha",
                        "active": {"cond": "::invert!=0"}
                    },
                    {
                        "name": "color_mult"
                    },
                    {
                        "name": "color_offset"
                    },
                    {
                        "name": "alpha_mult"
                    },
                    {
                        "name": "alpha_offset"
                    },
                    {
                        "name": "nouvw_color"
                    }
                ]
            },
            {
                "layout": "ROLLOUT",
                "name": "mapped",
                "label": "Mapped",
                "default_closed": true,
                "attrs": [
                    {
                        "name": "placement_type"
                    },
                    {
                        "name": "u"
                    },
                    {
                        "name": "v"
                    },
                    {
                        "name": "w"
                    },
                    {
                        "name": "h"
                    },
                    {
                        "name": "jitter"
                    },
                    {
                        "name": "tile_u"
                    },
                    {
                        "name": "tile_v"
                    },
                    {
                        "name": "uv_noise_on"
                    },
                    {
                        "name": "uv_noise_animate"
                    },
                    {
                        "name": "uv_noise_amount"
                    },
                    {
                        "name": "uv_noise_levels"
                    },
                    {
                        "name": "uv_noise_size"
                    }
                ]
            },
            {
                "layout": "ROLLOUT",
                "name": "noise",
                "label": "Noise",
                "attrs": [
                    {
                        "name": "un_noise_phase"
                    },
                    {
                        "name": "noise_amount"
                    },
                    {
                        "name": "noise_type"
                    },
                    {
                        "name": "noise_size"
                    },
                    {
                        "name": "noise_phase"
                    },
                    {
                        "name": "noise_levels"
                    },
                    {
                        "name": "noise_treshold_low"
                    },
                    {
                        "name": "noise_treshold_high"
                    },
                    {
                        "name": "noise_smooth"
                    }
                ]
            }
        ]
    },
    "Node": {
        "input_sockets": [
            { "name": "color_mult" },
            { "name": "color_offset" },
            { "name": "alpha_mult" },
            { "name": "alpha_offset" },
            { "name": "nouvw_color" },
            { "name": "gradient_position" },
            { "name": "texture_map" },
            { "name": "uvwgen" }
        ]
    },
    "Options": {
        "excluded_parameters": [ "compatibility_with" ],
        "animatable": true
    }
}