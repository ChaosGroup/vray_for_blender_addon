                [ "1", "Result B", "Value of B: B * Mult_B" ],
                [ "2", "Product", "Product: A * B" ],
                [ "3", "Sum", "Sum: A + B" ],
                [ "4", "Difference", "Difference: A - B" ],
                [ "5", "Power", "Power: A ^ B" ],
