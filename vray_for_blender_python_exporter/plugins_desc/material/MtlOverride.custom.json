{
    "ID": "MtlOverride",
    "Name": "V-Ray Mtl Override",
    "Parameters": [
        {
            "attr" : "base_mtl",
            "type": "BRDF"
        },
        {
            "attr": "gi_mtl_enabler",
            "type": "BRDF_USE",
            "bound_props": {
                "target_prop": "gi_mtl",
                "use_prop": "enable_gi_mtl"
            },
            "ui": { "display_name": "GI Material" },
            "desc": "Whether the connected GI material overrides the Global Illumination in the scene.",
            "default": true,
            "options": {
                "derived": true
            }
        },
        {
            "attr": "reflect_mtl_enabler",
            "type": "BRDF_USE",
            "bound_props": {
                "target_prop": "reflect_mtl",
                "use_prop": "enable_reflect_mtl"
            },
            "ui": { "display_name": "Reflect Material" },
            "desc": "Whether the connected material is seen in reflections.",
            "default": true,
            "options": {
                "derived": true
            }
        },
        {
            "attr": "refract_mtl_enabler",
            "type": "BRDF_USE",
            "bound_props": {
                "target_prop": "refract_mtl",
                "use_prop": "enable_refract_mtl"
            },
            "ui": { "display_name": "Refract Material" },
            "desc": "Whether the connected material is seen in refractions.",
            "default": true,
            "options": {
                "derived": true
            }
        },
        {
            "attr": "shadow_mtl_enabler",
            "type": "BRDF_USE",
            "bound_props": {
                "target_prop": "shadow_mtl",
                "use_prop": "enable_shadow_mtl"
            },
            "ui": { "display_name": "Shadow Material" },
            "desc": "Whether the connected material shades the object's shadows.",
            "default": true,
            "options": {
                "derived": true
            }
        }
    ],
    "Widget": {
        "widgets": [
            {
                "layout": "COLUMN",
                "attrs": [
                    {
                        "name": "gi_mtl_enabler"
                    },
                    {
                        "name": "reflect_mtl_enabler"
                    },
                    {
                        "name": "refract_mtl_enabler"
                    },
                    {
                        "name": "shadow_mtl_enabler"
                    }
                ]
            }
        ]
    },
    "Node":{
        "input_sockets":[
            {
                "name": "base_mtl"
            },
            {
                "name": "gi_mtl_enabler"
            },
            {
                "name": "reflect_mtl_enabler"
            },
            {
                "name": "refract_mtl_enabler"
            },
            {
                "name": "shadow_mtl_enabler"
            }
        ],
        "internal_links": {
            "*": ["*"]
        }
    },
    "Options": {
        "animatable": true,
        "excluded_parameters": [
            "use_environment_override",
            "environment_override",
            "environment_priority"
        ]
    }
}