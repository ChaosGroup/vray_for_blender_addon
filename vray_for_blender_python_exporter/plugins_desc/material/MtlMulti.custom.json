{
    "ID": "MtlMulti",
    "Name": "V-Ray Switch Mtl",
    "Parameters": [
        {
            "attr" : "mtlid_gen_float",
            "desc": "Switch texture",
            "default" : 1.0,
            "ui": {
                "spin_step": 1.0
            }
        },
        {
            "attr" : "wrap_id",
            "default" : false,
            "ui" :{
                "display_name": "Loop Materials"
            }
        },
        {
            "attr" : "mtlid_gen_float_round_mode",
            "items" : 
            [
                [ "0", "Nearest", "Round Nearest" ],
                [ "1", "Down", "Round Down" ]
            ]
        },
        {
            "attr" : "switch_id",
            "type": "INT", 
            "desc": "The index used to switch between the assigned materials. If the index does not correspond to any connected node, the Round Mode determines which node is sampled.",
            "default" : 0,
            "ui": {
                "min": 0,
                "soft_min": 0,
                "spin_step": 1,
                "display_name": "Switch"
            },
            "options": {
                "derived": true
            }
        },
        {
            "attr": "mtlid_gen_float_round_mode",
            "desc": "How to round the values returned by the ID parameter of connected materials."
        }
    ],
    "Widget": {
        "widgets": [
            {
                "layout": "COLUMN",
                "attrs": [
                    {
                        "name": "switch_id",
                        "label": "Switch ID"
                    },
                    {
                        "layout": "ROW",
                        "attrs": [
                            {
                                "name": "mtlid_gen_float_round_mode",
                                "label": "Round Mode",
                                "expand": true
                            }
                        ]
                    },
                    {
                        "name": "wrap_id",
                        "label": "Loop Materials"
                    }
                ]
            }
        ]
    },
    "Options": {
        "animatable": true,
        "excluded_parameters": [
            "mtlid_gen"
        ]
    }
}