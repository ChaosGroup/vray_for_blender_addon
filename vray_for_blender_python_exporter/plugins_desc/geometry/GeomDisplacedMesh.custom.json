{
    "ID": "GeomDisplacedMesh",
    "Parameters": [
        {
            "attr": "type",
            "default": "Normal",
            "desc": "Displacement type",
            "items": [
                [
                    "0",
                    "Normal",
                    "Normal displacement"
                ],
                [
                    "1",
                    "2D",
                    "2D displacement"
                ],
                [
                    "2",
                    "Vector",
                    "Vector displacement"
                ],
                [
                    "3",
                    "Vector (Absolute)",
                    "Vector displacement"
                ],
                [
                    "4",
                    "Vector (Object)",
                    "Vector displacement"
                ]
            ],
            "name": "Mode",
            "type": "ENUM",
            "update": "onUpdateDisplacementType",
            "options": {
                "derived": true
            }
        },
        {
            "attr": "displacement_amount",
            "default": 0.01,
            "ui": {
                "display_name": "Amount",
                "spin_step": 0.01,
                "soft_min": -1.0,
                "soft_max": 1.0
            },
            "options": {
                "animatable": true
            }
        },
        {
            "attr": "displacement_shift",
            "ui": {
                "display_name": "Shift",
                "soft_min": -2.0,
                "soft_max": 2.0,
                "spin_step": 0.01
            },
            "options": {
                "animatable": true
            }
        },
        {
            "attr": "use_water_level",
            "type": "BOOL",
            "default": false,
            "options": {
                "derived": true,
                "animatable": true
            }
        },
        {
            "attr": "water_level",
            "default": -1.0,
            "options": {
                "animatable": true
            }
        },
        {
            "attr": "static_displacement",
            "default": "1",
            "type": "ENUM",
            "items": [
                [
                    "0",
                    "On The Fly",
                    "On The Fly"
                ],
                [
                    "1",
                    "Pre-tesselated",
                    "Pre-tesselated"
                ]
            ]
        },
        {
            "attr": "min_bound_float",
            "default": 0.0,
            "type": "FLOAT",
            "options": {
                "animatable": true,
                "derived": true
            }
        },
        {
            "attr": "max_bound_float",
            "default": 1.0,
            "type": "FLOAT",
            "options": {
                "animatable": true,
                "derived": true
            }
        },
        {
            "attr": "displace_2d_transform",
            "options": {
                "visible": false
            }
        }
    ],
    "Node": {
        "widgets": [
            {
                "layout": "COLUMN",
                "attrs": [
                    {
                        "name": "type"
                    },
                    {
                        "name": "displacement_amount",
                        "label": "Amount"
                    },
                    {
                        "name": "displacement_shift",
                        "label": "Shift"
                    }
                ]
            }
        ],
        "input_sockets": [
            {
                "name": "displace_2d_transform",
                "label": "2D Displacement Transform"
            }
        ]
    },
    "Widget": {
        "widgets": [
            {
                "layout": "ROLLOUT",
                "label": "Displacement",
                "name": "displacement",
                "default_closed": false,
                "align": true,
                "attrs": [
                    {
                        "name": "type"
                    },
                    {
                        "name": "displacement_amount"
                    },
                    {
                        "name": "displacement_shift"
                    }
                ]
            },
            {
                "layout": "ROLLOUT",
                "label": "Advanced",
                "name": "advanced",
                "align": true,
                "attrs": [
                    {
                        "name": "static_displacement",
                        "label": "Geometry Generation",
                        "active": {
                            "cond": "::type!=1;"
                        }
                    },
                    {
                        "name": "keep_continuity"
                    },
                    {
                        "name": "cache_normals"
                    },
                    {
                        "name": "use_water_level"
                    },
                    {
                        "name": "water_level",
                        "active": { "cond": "::use_water_level=1" }
                    },
                    {
                        "name": "use_bounds",
                        "active": {
                            "cond": "::type!=1;"
                        }
                    },
                    {
                        "name": "min_bound_float",
                        "active": {
                            "cond": "::type!=1,::use_bounds=1"
                        }
                    },
                    {
                        "name": "max_bound_float",
                        "active": {
                            "cond": "::type!=1,::use_bounds=1"
                        }
                    }
                ]
            },
            {
                "layout": "ROLLOUT",
                "label": "2D Displacement",
                "name": "2d",
                "active": {
                    "cond": "::type=1"
                },
                "attrs": [
                    {
                        "name": "resolution"
                    },
                    {
                        "name": "filter_texture"
                    },
                    {
                        "name": "filter_blur",
                        "active": {
                            "cond": "::filter_texture=1"
                        }
                    },
                    {
                        "name": "precision"
                    },
                    {
                        "name": "tight_bounds"
                    },
                    {
                        "name": "displace_2d_multi_tile",
                        "label": "Multi Tile"
                    }
                ]
            },
            {
                "layout": "ROLLOUT",
                "label": "Quality Overrides",
                "name": "overrides",
                "align": true,
                "attrs": [
                    {
                        "attrs": [
                            {
                                "name": "use_globals"
                            }
                        ],
                        "layout": "COLUMN"
                    },
                    {
                        "active": {
                            "cond": "::use_globals=0"
                        },
                        "layout": "COLUMN",
                        "attrs": [
                            {
                                "name": "view_dep"
                            },
                            {
                                "name": "edge_length"
                            },
                            {
                                "name": "max_subdivs"
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "Options": {
        "use_factor_subtype": true,
        "animatable": false,
        "use_animation_layout": true,
        "excluded_parameters": [
            "mesh"
        ]
    }
}