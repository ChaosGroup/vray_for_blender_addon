{
    "ID": "SettingsCameraDof",
    "Parameters": [
        {
            "attr": "use_camera_focus",
            "type": "BOOL",
            "default": false,
            "desc": "Use the camera's focus distance instead of the one from the global DoF settings.",
            "options": {
                "derived": true
            }
        },
        {
            "attr": "subdivs",
            "options": {
                "visible": false
            }
        },
        {
            "attr": "focal_dist",
            "ui": {
                "soft_max": 1000.0,
                "spin_step": 0.5
            }
        },
        {
            "attr": "aperture",
            "ui": {
                "soft_max": 20.0,
                "spin_step": 0.1
            }
        },
        {
            "attr": "rotation",
            "ui": {
                "soft_max": 360.0,
                "spin_step": 1.0
            }
        },
        {
            "attr": "scene_name",
            "get": "sceneNameGet"
        }
    ],
    "Type": "SETTINGS",
    "Options": {
        "excluded_parameters": [
            "dont_affect_settings",
            "focal_dist",
            "subdivs"
        ]
    },
    "Widget": {
        "widgets": [
            {
                "layout": "ROLLOUT",
                "name": "Depth of Field",
                "label": "Depth of Field",
                "use_prop": "on",
                "attrs": [
                    {
                        "name": "aperture"
                    },
                    {
                        "name": "center_bias"
                    },
                    {
                        "name": "use_camera_focus",
                        "label": "Use Camera Focus Distance"
                    },
                    {
                        "name": "focal_dist",
                        "active": {"cond": "::use_camera_focus!=1"}
                    },
                    {
                        "name": "sides_on",
                        "label": "Aperture Shape"
                    },
                    {
                        "name": "sides_num",
                        "label": "Number of Blades"
                    },
                    {
                        "name": "rotation"
                    },
                    {
                        "name": "anisotropy"
                    }
                ]
            }
        ]
    }
}