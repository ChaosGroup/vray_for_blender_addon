{
    "ID": "CameraPhysical",
    "Parameters": [
        {
            "attr": "lens_file",
            "subtype": "FILE_PATH"
        },
        {
            "attr": "auto_lens_shift",
            "default": false,
            "desc": "Calculate lens shift automatically",
            "type": "BOOL",
            "options": {
                "derived": true
            }
        },
        {
            "attr": "use",
            "default": false,
            "desc": "Use Physical Camera",
            "type": "BOOL",
            "options": {
                "derived": true
            }
        },
        {
            "attr": "subdivs",
            "options": {
                "visible": false
            }
        },
        {
            "attr": "focal_length",
            "default": 50.0,
            "precision": 3,
            "subtype": "DISTANCE_CAMERA",
            "get": "focalLengthGet",
            "set": "focalLengthSet"
        },
        {
            "attr": "blades_rotation",
            "subtype": "ANGLE",
            "desc": "Blade rotation",
            "precision": 3,
            "ui": {
                "spin_step": 1
            }
        },
        {
            "attr": "focus_distance",
            "default": 1.0
        },
        {
            "attr": "fov",
            "desc" : "The FOV value to use when specify_fov is true",
            "subtype": "ANGLE",
            "ui": {
                "spin_step": 1,
                "min": 0.00017453292519943295,
                "max": 3.141592653589793
            },
            "get": "fovGet",
            "set": "fovSet"
        },
        {
            "attr": "shutter_angle",
            "precision": 3,
            "ui": {
                "units": "degrees",
                "spin_step": 1,
                "min": 10,
                "max": 360
            }
        },
        {
            "attr": "shutter_offset",
            "precision": 3,
            "ui": {
                "units": "degrees",
                "spin_step": 1,
                "min": -360,
                "max": 360
            }
        },
        {
            "attr": "latency",
            "ui": {
                "spin_step": 0.01
            }
        },
        {
            "attr": "exposure_value",
            "default": 12.0,
            "ui": {
                "soft_min": 0.0,
                "soft_max": 20.0,
                "spin_step": 0.1
            }
        },
        {
            "attr": "vignetting",
            "default": 1.0,
            "ui": {
                "soft_max": 5.0,
                "spin_step": 0.01
            }
        },
        {
            "attr": "enable_vignetting",
            "default": false,
            "desc": "Enable vignetting effect",
            "type": "BOOL",
            "options": {
                "derived": true
            }
        },
        {
            "attr" : "specify_focus",
            "default" : true
        },
        {
            "attr": "use_dof",
            "update": "onUpdateUseDof"
        },
        {
            "attr": "film_width",
            "precision": 3,
            "subtype": "DISTANCE_CAMERA",
            "get": "filmWidthGet",
            "set": "filmWidthSet",
            "ui": {
                "spin_step": 1.0
            },
            "//Comment": "When specify_fov is enabled, we need to return the user-set FOV value, but initially",
            "//Comment": "it's unset because the getter/setter fall back to Blender's camera sensor size properties.",
            "//Comment": "To avoid losing the default, we keep a 'shadow' copy of the property's value and return that",
            "//Comment": "once specify_fov is toggled on.",
            "options": {
                "shadowed": true
            }
        },
        {
            "attr": "bmpaperture_tex_path",
            "type": "STRING",
            "desc": "Texture to use as aperture.",
            "default": "",
            "subtype": "FILE_PATH",
            "options": {
                "derived": true
            },
            "ui": {
                "display_name": "Texture"
            }
        },
        {
            "attr": "distortion_tex_path",
            "type": "STRING",
            "desc": "Texture to use as distortion map.",
            "default": "",
            "subtype": "FILE_PATH",
            "options": {
                "derived": true
            },
            "ui": {
                "display_name": "Distortion Texture"
            }
        }
    ],
    "Type": "CAMERA",
    "Options": {
        "excluded_parameters": [
            "enable_thin_lens_equation",
            "subdivs",
            "dof_display_threshold",
            "targeted",
            "target_distance"
        ],
        "animatable": true
    },
    "Widget": {
        "widgets": [
            {
                "layout": "ROLLOUT",
                "name": "general",
                "label": "General",
                "default_closed": false,
                "attrs": [
                    {
                        "layout": "ROLLOUT",
                        "name": "camera",
                        "label": "Camera",
                        "default_closed": false,
                        "attrs": [
                            {
                                "name": "type",
                                "label": "Camera Type"
                            }
                        ]
                    },
                    {
                        "layout": "ROLLOUT",
                        "name": "sensor and lens",
                        "label": "Sensor and Lens",
                        "default_closed": false,
                        "attrs": [
                            {
                                "layout": "COLUMN",
                                "attrs": [
                                    {
                                        "name": "specify_fov",
                                        "label": "Specify Field of View"
                                    },
                                    {
                                        "name": "fov",
                                        "label": "Field of View",
                                        "active": {
                                            "cond": "::specify_fov=1"
                                        }
                                    }
                                ]
                            },
                            {
                                "name": "film_width",
                                "label": "Film Gate (mm)"
                            },
                            {
                                "name": "focal_length",
                                "label": "Focal Length (mm)",
                                "active": {
                                    "cond": "::specify_fov=0"
                                }
                            },
                            {
                                "name": "zoom_factor",
                                "active": {
                                    "cond": "::specify_fov=0"
                                }
                            }
                        ]
                    },
                    {
                        "layout": "ROLLOUT",
                        "name": "aperture",
                        "label": "Aperture",
                        "default_closed": false,
                        "attrs": [
                            {
                                "name": "ISO",
                                "label": "Film Speed (ISO)"
                            },
                            {
                                "name": "f_number",
                                "label": "F-Number"
                            },
                            {
                                "name": "shutter_speed",
                                "label": "Shutter Speed (s^-1)",
                                "active": {
                                    "cond": "::type!=1,::type!=2"
                                }
                            },
                            {
                                "name": "shutter_angle",
                                "active": {
                                    "cond": "::type!=0,::type!=2"
                                }
                            },
                            {
                                "name": "shutter_offset",
                                "active": {
                                    "cond": "::type!=0,::type!=2"
                                }
                            },
                            {
                                "name": "latency",
                                "label": "Latency (s)",
                                "active": {
                                    "cond": "::type!=0,::type!=1"
                                }
                            }
                        ]
                    },
                    {
                        "layout": "ROLLOUT",
                        "name": "color and exposure",
                        "label": "Color and Exposure",
                        "default_closed": false,
                        "attrs": [
                            {
                                "name": "exposure"
                            },
                            {
                                "name": "exposure_value",
                                "active": {
                                    "cond": "::exposure=2"
                                }
                            },
                            {
                                "name": "enable_vignetting",
                                "label": "Vignetting"
                            },
                            {
                                "name": "vignetting",
                                "label": "Vignetting Strength",
                                "active": {
                                    "cond": "::enable_vignetting=1"
                                }
                            },
                            {
                                "name": "white_balance"
                            }
                        ]
                    },
                    {
                        "layout": "ROLLOUT",
                        "name": "tilt and shift",
                        "label": "Tilt and Shift",
                        "default_closed": false,
                        "attrs": [
                            {
                                "layout": "COLUMN",
                                "name": "",
                                "label": "",
                                "default_closed": false,
                                "attrs": [
                                    {
                                        "name": "lens_shift"
                                    },
                                    {
                                        "name": "horizontal_shift"
                                    },
                                    {
                                        "name": "vertical_offset"
                                    },
                                    {
                                        "name": "horizontal_offset"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "layout": "ROLLOUT",
                "name": "dof and motion blur",
                "label": "DoF and Motion Blur",
                "attrs": [
                    {
                        "layout": "ROLLOUT",
                        "name": "Depth of Field",
                        "label": "Depth of Field",
                        "use_prop": "use_dof",
                        "attrs": [
                            {
                                "name": "blades_enable",
                                "label": "Aperture Shape"
                            },
                            {
                                "name": "blades_num",
                                "active": { "cond": "::blades_enable=1" },
                                "label": "Blades Number"
                            },
                            {
                                "name": "blades_rotation",
                                "active": { "cond": "::blades_enable=1" },
                                "label": "Rotation"
                            },
                            {
                                "name": "center_bias"
                            },
                            {
                                "name": "anisotropy"
                            },
                            {
                                "name": "optical_vignetting"
                            },
                            {
                                "layout": "ROLLOUT",
                                "name": "bitmap aperture",
                                "label": "Bitmap Aperture",
                                "use_prop": "bmpaperture_enable",
                                "default_closed": false,
                                "attrs": [
                                    {
                                        "name": "bmpaperture_tex_path"
                                    },
                                    {
                                        "name": "bmpaperture_resolution"
                                    },
                                    {
                                        "name": "bmpaperture_affects_exposure",
                                        "label": "Affect Exposure"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "layout": "ROLLOUT",
                        "name": "motion blur",
                        "label": "Motion Blur",
                        "use_prop": "use_moblur",
                        "default_closed": false,
                        "attrs": [
                            {
                                "name": "rolling_shutter_mode",
                                "label": "Rolling Shutter Mode"
                            },
                            {
                                "name": "rolling_shutter_duration",
                                "label": "Duration (s^-1)",
                                "active": {"cond": "::rolling_shutter_mode!=0"}
                            }
                        ]
                    }
                ]
            },
            {
                "layout": "ROLLOUT",
                "name": "distortion",
                "label": "Distortion",
                "attrs": [
                    {
                        "layout": "COLUMN",
                        "name": "",
                        "label": "",
                        "attrs": [
                            {
                                "name": "distortion_type",
                                "label": "Type"
                            },
                            {
                                "name": "distortion",
                                "label": "Amount",
                                "visible": {
                                    "cond": "::distortion_type=0;::distortion_type=1"
                                }
                            }
                        ]
                    },
                    {
                        "name": "distortion_tex_path",
                        "visible": {
                            "cond": "::distortion_type=3"
                        }
                    },
                    {
                        "name": "lens_file",
                        "visible": {
                            "cond": "::distortion_type=2"
                        }
                    }
                ]
            }
        ]
    }
}