{
    "ID": "CameraPhysical",
    "Parameters": [
        {
            "attr": "lens_file",
            "subtype": "FILE_PATH"
        },
        {
            "attr": "auto_lens_shift",
            "default": false,
            "desc": "Calculate lens shift automatically",
            "type": "BOOL",
            "options": {
                "derived": true
            }
        },
        {
            "attr": "use",
            "default": false,
            "desc": "Use Physical Camera",
            "type": "BOOL",
            "options": {
                "derived": true
            }
        },
        {
            "attr": "subdivs",
            "options": {
                "visible": false
            }
        },
        {
            "attr": "focal_length",
            "default": 50.0,
            "precision": 3,
            "subtype": "DISTANCE_CAMERA",
            "get": "focalLengthGet",
            "set": "focalLengthSet"
        },
        {
            "attr": "focus_distance",
            "default": 1.0
        },
        {
            "attr": "target_distance",
            "ui": {
                "quantityType": "distance"
            }
        },
        {
            "attr": "fov",
            "get": "fovGet",
            "set": "fovSet",
            "subtype": "ANGLE",
            "ui": {
                "spin_step": 1.0
            }
        },
        {
            "attr": "shutter_angle",
            "ui": {
                "spin_step": 5.0
            }
        },
        {
            "attr": "shutter_offset",
            "ui": {
                "spin_step": 5.0
            }
        },
        {
            "attr": "latency",
            "ui": {
                "spin_step": 0.01
            }
        },
        {
            "attr": "exposure_value",
            "default": 12.0,
            "ui": {
                "soft_min": 0.0,
                "soft_max": 20.0,
                "spin_step": 0.1
            }
        },
        {
            "attr": "vignetting",
            "default": 1.0,
            "ui": {
                "soft_max": 5.0,
                "spin_step": 0.01
            }
        },
        {
            "attr" : "specify_focus",
            "default" : true
        },
        {
            "attr": "use_dof",
            "options": {
                "shadowed": true
            }
        }
    ],
    "Type": "CAMERA",
    "Options": {
        "excluded_parameters": [
            "dont_affect_settings",
            "enable_thin_lens_equation",
            "subdivs",
            "dof_display_threshold",
            
            "targeted",
            "target_distance"
        ],
        "animatable": true
    },
    "excluded_parameters": [
        "subdivs"
    ],
    "Widget": {
        "widgets": [
            {
                "layout": "ROLLOUT",
                "name": "general",
                "label": "General",
                "default_closed": false,
                "attrs": [
                    {
                        "layout": "ROLLOUT",
                        "name": "camera",
                        "label": "Camera",
                        "default_closed": false,
                        "attrs": [
                            {
                                "name": "type",
                                "label": "Camera Type"
                            }
                        ]
                    },
                    {
                        "layout": "ROLLOUT",
                        "name": "sensor and lens",
                        "label": "Sensor and Lens",
                        "default_closed": false,
                        "attrs": [
                            {
                                "layout": "COLUMN",
                                "attrs": [
                                    {
                                        "name": "specify_fov",
                                        "label": "Specify Field of View"
                                    },
                                    {
                                        "name": "fov",
                                        "label": "Field of View",
                                        "active": {
                                            "cond": "::specify_fov=1"
                                        }
                                    }
                                ]
                            },
                            {
                                "name": "film_width",
                                "label": "Film Gate (mm)"
                            },
                            {
                                "name": "focal_length",
                                "label": "Focal Length (mm)",
                                "active": {
                                    "cond": "::specify_fov=0"
                                }
                            },
                            {
